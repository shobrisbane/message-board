<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<%= form_for(@message) do |f| %>
  <div class="form-group"> <label for="message_name">名前:</label> <input class="form-control" type="text" name="message[name]" id="message_name" /> </div>
  <div class="form-group"> <label for="message_body">内容:</label> <textarea class="form-control" name="message[body]" id="message_body"> </textarea> </div>    
  <div class="form-group"> <label for="message_age">年齢:</label> <textarea class="form-control" name="message[age]" id="message_age"> </textarea> </div>    
  
  <%= f.submit class:"btn btn-sm btn-primary" %>
<% end %>