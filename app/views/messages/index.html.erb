<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  名前:
  <%= f.text_field :name, class:"form-group",<label for="message_name">名前:</label>, :size => "10x1",input class: "form-control", id: "message_name", placeholder: "Enter name" %>
  
  内容:
  <%= f.text_area :body, class:"form-group",<label for="message_body">内容:</label>, :size => "10x1",inpt class: "form-control", id: "message_body", placeholder: "Enter body" %>
    
  <%= f.submit class:"btn btn-sm btn-primary" %>
  
<% end %>



#下記のように<div class="form-group">でそれぞれの項目を囲んでいただくと、良いと思います。また、「名前:」などもlabelで囲ってあげてください。

<div class="form-group"> <label for="message_name">名前:</label> <input class="form-control" type="text" name="message[name]" id="message_name" /> </div>

<div class="form-group"> <label for="message_body">内容:</label> <textarea class="form-control" name="message[body]" id="message_body"> </textarea> </div>