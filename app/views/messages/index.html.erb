<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <div class="form-group"> <label for="message_name">名前:</label> <input class="form-control" type="text" name="message[name]" id="message_name" /> </div>
  
  <div class="form-group"> <label for="message_body">内容:</label> <textarea class="form-control" name="message[body]" id="message_body"> </textarea> </div>    
  
  <%= f.submit class:"btn btn-sm btn-primary" %>
  

<% end %>